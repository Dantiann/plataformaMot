@model plataformaMotVer6.Models.TblUsuarios

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title> @*Nombre de la pestaña*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-4  col-sm-offset-4">
                <h1>Login</h1>
                <form action="@Url.Action("Login","Home")" method="post">
                    @*<div class="form-group">
                            <label>Tipo de Documento:</label>
                            <input class="form-control" type="text" name="TipoDocumento" />
                        </div>*@
                    <div class="form-group">
                        @*@Html.LabelFor(model => model.TipoDocumento, htmlAttributes: new { @class = "control-label" })*@
                        @Html.DropDownListFor(model => model.TipoDocumento, (SelectList)ViewBag.TipoDocumento, "Tipo de Documento", new { @class = "form-control", @required = "required", data_val_required = "Debe seleccionar un tipo de documento" })

                    </div>
                    <br />

                    <div class="form-group">
                        @*<label>Número de Documento:</label>*@
                        <input class="form-control" type="number" name="NumeroDocumento" placeholder="Número de Documento" required data-val-required="Este campo es obligatorio" />
                    </div>
                    <br />

                    <div class="form-group">
                        @*<label>Contraseña:</label>*@
                        <input class="form-control" type="password" name="Clave" placeholder="Contraseña" required data-val-required="Este campo es obligatorio" />
                    </div>
                    <br />

                    <button type="submit" class="btn btn-success">Ingresar</button>
                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-warning" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>

</body>
</html>
